<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="co.kr.lotteon.mapper.LtProductMapper">

	<!-- Prod_List_Test -->
	<select id="selectProducts" resultType="co.kr.lotteon.dto.LtProductDTO">
		SELECT * FROM `lt_product`
	</select>

	<!--admin 상품 조회 + 카테고리 조인-->
	<select id="selectLtProduct" resultType="co.kr.lotteon.dto.LtProductDTO">
		SELECT *
		FROM lt_product AS p
		JOIN lt_product_cate1 AS c1 ON p.prodCate1 = c1.cate1
		JOIN lt_product_cate2 AS c2 ON p.prodCate1 = c2.cate1
		WHERE p.prodNo = #{prodNo}
	</select>

	<!--admin 상품 등록-->
	<insert id="insertLtProduct">
		INSERT INTO `lt_product` SET
		`prodCate1`= #{prodCate1},
		`prodCate2`= #{prodCate2},
		`prodName`= #{prodName},
		`descript`= #{descript},
		`company`= #{company},
		`seller`= #{seller},
		`price`= #{price},
		`discount`=#{discount},
		`point`=#{point},
		`stock`=#{stock},
		`delivery`=#{delivery},
		`thumb1`=#{thumb1},
		`thumb2`=#{thumb2},
		`thumb3`=#{thumb3},
		`detail`=#{detail},
		`status`=#{status},
		`duty`=#{duty},
		`receipt`=#{receipt},
		`bizType`=#{bizType},
		`origin`=#{origin},
		`ip`=#{ip},
		`rdate`=NOW();
	</insert>

	<!--admin 상품 삭제-->
	<delete id="updateLtProductDeleteColumn" parameterType="co.kr.lotteon.dto.LtProductDTO">
		UPDATE `lt_product` SET isRemoved = 1, wdate = NOW() WHERE prodNo=#{prodNo}
	</delete>

	<!--admin 상품 수정-->
	<update id="updateLtProduct">
		UPDATE `lt_product` SET
	</update>

</mapper>
